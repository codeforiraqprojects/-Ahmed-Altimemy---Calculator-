<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#455A64"
    tools:context=".MainActivityCalc">

    <android.support.constraint.ConstraintLayout
        android:layout_width="395dp"
        android:layout_height="716dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="#212121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnBackToMain"
            android:layout_width="208dp"
            android:layout_height="35dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="396dp"
            android:background="#757575"
            android:onClick="BackToMain"
            android:text="btnBackToMain"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnCE"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="332dp"
            android:background="#757575"
            android:onClick="getButtonID"
            android:text="CE"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="332dp"
            android:background="#757575"
            android:onClick="getButtonID"
            android:text="C"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="125dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="200dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="117dp"
            android:layout_height="0dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="200dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="."
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="365dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="264dp"
            android:background="#FF9800"
            android:onClick="getButtonID"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnSubtraction"
            android:layout_width="85dp"
            android:layout_height="0dp"
            android:layout_marginStart="292dp"
            android:layout_marginTop="200dp"
            android:background="#FF9800"
            android:onClick="getButtonID"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="136dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="136dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="188dp"
            android:layout_marginTop="136dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnAddition"
            android:layout_width="85dp"
            android:layout_height="0dp"
            android:layout_marginStart="292dp"
            android:layout_marginTop="136dp"
            android:background="#FF9800"
            android:onClick="getButtonID"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="76dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="76dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="188dp"
            android:layout_marginTop="76dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnMultiplication"
            android:layout_width="85dp"
            android:layout_height="0dp"
            android:layout_marginStart="292dp"
            android:layout_marginTop="76dp"
            android:background="#FF9800"
            android:onClick="getButtonID"
            android:text="*"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btnDivision"
            android:layout_width="85dp"
            android:layout_height="0dp"
            android:layout_marginStart="292dp"
            android:layout_marginTop="16dp"
            android:background="#FF9800"
            android:onClick="getButtonID"
            android:text="/"
            android:textColor="#ffffff"
            android:textColorLink="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="188dp"
            android:layout_marginTop="16dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="362dp"
            android:layout_height="66dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="72dp"
            android:text="AMD (( Calculator ))   With Long Expression"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtView"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTitle" />

        <EditText
            android:id="@+id/txtWrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtView" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:background="#424242"
            android:onClick="getButtonID"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWrite" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>